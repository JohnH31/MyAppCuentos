<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MAFrag">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btnFrag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duendes al plato"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btnFrag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loro sin memoria"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btnFrag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El zorro Zurro"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btnFrag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El gusanito Pepito"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btnFrag5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Con los dedos de una mano"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/contenedorID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            />
    </ScrollView>

</LinearLayout>